<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anthony.futmath10.MainFinal"
    android:background="@drawable/font">

    <TextView
        android:text="Juego terminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="23dp"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Jugador 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Jugador 2:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_nombre1"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="93dp"
        android:id="@+id/textView9"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Puntos acumulados:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="46dp"
        android:id="@+id/textView11"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Jose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:id="@+id/tv_nombre1"
        android:layout_above="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Puntos acumulados: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/tv_puntos1"
        android:layout_alignBottom="@+id/tv_puntos1"
        android:layout_alignStart="@+id/textView9"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_puntos2"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/tv_nombre2"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tv_ganador"
        android:layout_marginBottom="16dp"
        android:id="@+id/btn_reiniciar"
        android:background="@color/colorPrimary" />

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_salir"
        android:layout_alignBaseline="@+id/btn_reiniciar"
        android:layout_alignBottom="@+id/btn_reiniciar"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginStart="17dp"
        android:background="@color/colorPrimary" />

    <Button
        android:text="Nueva partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_reiniciar"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_nueva"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="Ganador: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_above="@+id/btn_reiniciar"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginBottom="39dp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ganador"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignEnd="@+id/tv_puntos1"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_puntos1"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/tv_nombre1"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="Julio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nombre2"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/btn_salir"
        android:layout_marginStart="28dp"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
